#!/bin/sh

# a simple todo script

TODOFILE=~/.todo
CAT=bat

[ "$1" ] ||exit 1

add_todo() {
  printf '%s\n' "$1" >> $TODOFILE
}

rm_todo() {
  sed -i.old -E "/^$1$/d" "$TODOFILE"
}

while [ "$1" ]; do
  case "$1" in 
    a | add | n | new)
      add_todo "$2"
      exit ;;
    l | ls | list)
      $CAT $TODOFILE
      exit ;;
    d | done | complete)
      rm_todo "$2"
      exit ;;
  esac
done
