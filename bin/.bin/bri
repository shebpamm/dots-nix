#!/bin/sh

# set brightness
brightnessctl s $1

# get brightness
MAX_BRI=$(cat /sys/class/backlight/intel_backlight/max_brightness)
CUR_BRI=$(cat /sys/class/backlight/intel_backlight/brightness)

# calculating current percentage
CUR_PER=$((CUR_BRI * 100 / MAX_BRI))

# send notification
dunstify -a "Brightness" \
  "Brightness" \
  -h int:value:$CUR_PER \
  -r 69 \
  "$CUR_PER%"
