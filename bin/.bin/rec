#!/bin/sh

resolution=$(xdpyinfo | awk '/dimensions/ {print $2}')

if [ "$1" ]; then
  filename="$1"
else
  filename=~/Videos/Recordings/$(date).mp4
fi

dwmc run_command setstatus 7 "^c#ea6962^ ï¥‰ REC  "

ffmpeg \
    -video_size "$resolution"\
    -framerate 35 \
    -f x11grab \
    -i :0.0 \
    -pix_fmt yuv420p \
    -c:v libx264 \
    -preset ultrafast \
    -y \
    -v error \
    -stats \
    "$filename"

dwmc run_command setstatus 7 " "
